<?xml version="1.0" encoding="utf-8"?><!-- res/layout/chat_view_layout.xml -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="false"
        android:focusable="false"
        tools:listitem="@layout/rtm_message_item" />

    <EditText
        android:id="@+id/inputMessageBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_chat_view"
        android:drawableStart="@drawable/tabler_message_circle_2"
        android:drawablePadding="4dp"
        android:fontFamily="sans-serif"
        android:hint="Message"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:maxWidth="350dp"
        android:padding="8dp"
        android:textColor="@color/t.primary.night"
        android:textColorHint="@color/bg.tooltip"
        android:textSize="14sp" />

</merge>
